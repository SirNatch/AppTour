<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.armaptour.apptour.Tule"
    android:background="@drawable/fondo">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton4"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/hotel"
                android:onClick="LanzarHotelTule" />

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton5"
                android:layout_below="@+id/imageButton4"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/restaurante"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton6"
                android:layout_below="@+id/imageButton5"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/transporte"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton7"
                android:layout_below="@+id/imageButton6"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/eventos"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton8"
                android:layout_below="@+id/imageButton7"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/informacion"/>

            <ImageButton
                android:layout_width="200px"
                android:layout_height="95px"
                android:id="@+id/imageButton9"
                android:layout_below="@+id/imageButton8"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@drawable/otros"/>

        </LinearLayout>


        <ImageView
            android:layout_width="300px"
            android:layout_height="450px"
            android:id="@+id/imageView3"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/arbol1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tule_informacion"
            android:id="@+id/textView4"
            android:gravity="center"
            android:paddingLeft="15px"
            android:paddingRight="15px"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout" />
    </RelativeLayout>
</RelativeLayout>
